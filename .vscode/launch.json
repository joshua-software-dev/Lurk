    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) Launch Layer",
            "type": "lldb",
            "request": "launch",
            "program": "/usr/bin/vkcube",
            "args": [],
            "cwd": "${workspaceFolder}/vk_layer_lurk/",
            "env": {
                "ENABLE_LURK": "1",
                "RADV_DEBUG": "llvm",
                "VK_ADD_LAYER_PATH": "${workspaceFolder}/vk_layer_lurk/manifests/debug",
                "VK_LOADER_LAYERS_ENABLE": "VK_LAYER_Lurk_*",
                "VK_LOADER_DEBUG": "all",
            },
            "preLaunchTask": "build layer",
        },
        {
            "name": "(lldb|radvdebug) Launch Layer",
            "type": "lldb",
            "request": "launch",
            "program": "/usr/bin/vkcube",
            "args": [],
            "cwd": "${workspaceFolder}/vk_layer_lurk/",
            "env": {
                "ENABLE_LURK": "1",
                "LD_LIBRARY_PATH": "${workspaceFolder}/../realmesa/radvdebug/lib64:${LD_LIBRARY_PATH}",
                "RADV_DEBUG": "llvm",
                "VK_ADD_LAYER_PATH": "${workspaceFolder}/vk_layer_lurk/manifests/debug",
                "VK_ICD_FILENAMES": "${workspaceFolder}/../realmesa/radvdebug/share/vulkan/icd.d/radeon_icd.x86_64.json",
                "VK_LOADER_LAYERS_ENABLE": "VK_LAYER_Lurk_*",
                "VK_LOADER_DEBUG": "all",
            },
            "preLaunchTask": "build layer",
        },
        {
            "name": "(lldb|swiftshader) Launch Layer",
