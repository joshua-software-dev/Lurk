    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) Launch Layer",
            "type": "lldb",
            "request": "launch",
            "program": "/usr/bin/vkcube",
            "args": [],
            "cwd": "${workspaceFolder}/vk_layer_lurk/",
            "env": {
                "ENABLE_LURK": "1",
                "VK_ADD_LAYER_PATH": "${workspaceFolder}/vk_layer_lurk/manifests/debug",
                "VK_LOADER_LAYERS_ENABLE": "VK_LAYER_Lurk",
                "VK_LOADER_DEBUG": "all",
                "RADV_DEBUG": "llvm"
            },
            "preLaunchTask": "build layer",
        },
        {
            "name": "(gdb) Launch Layer",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/bin/vkcube",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/vk_layer_lurk/",
            "environment": [
                {
                    "name": "ENABLE_LURK",
                    "value": "1"
                },
                {
                    "name": "VK_ADD_LAYER_PATH",
                    "value": "${workspaceFolder}/vk_layer_lurk/manifests/debug"
                },
                {
                    "name": "VK_LOADER_LAYERS_ENABLE",
                    "value": "VK_LAYER_Lurk"
                },
                {
                    "name": "VK_LOADER_DEBUG",
                    "value": "all"
                },
                {
                    "name": "RADV_DEBUG",
                    "value": "gdb"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "build layer",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Launch CLI",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/cli_tool_lurk/zig-out/bin/lurk",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/cli_tool_lurk/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "build cli",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}